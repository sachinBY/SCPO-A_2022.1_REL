%dw 2.0
output application/java
---
if(vars.filterCondition != null)
	"SELECT PROJORDERTOTAL.* FROM PROJORDERTOTAL,PROJORDERSUMMARY WHERE PROJORDERTOTAL.ORDERID = PROJORDERSUMMARY.ORDERID" ++ " AND " ++ vars.filterCondition ++ " ORDER BY PROJORDERTOTAL.ORDERID,PROJORDERTOTAL.UOM OFFSET " ++ vars.offset ++ " ROWS FETCH NEXT " ++ vars.next ++ " ROWS ONLY"
else
	"SELECT PROJORDERTOTAL.* FROM PROJORDERTOTAL,PROJORDERSUMMARY WHERE PROJORDERTOTAL.ORDERID = PROJORDERSUMMARY.ORDERID" ++ " ORDER BY PROJORDERTOTAL.ORDERID,PROJORDERTOTAL.UOM OFFSET " ++ vars.offset ++ " ROWS FETCH NEXT " ++ vars.next ++ " ROWS ONLY"